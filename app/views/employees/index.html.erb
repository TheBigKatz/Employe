<div>

	<h1><center><strong><font color="Black"><u> Employee Database</u></font></strong></center></h1>

	<div class="row">
		<% @employees.each do |employee| %>

			<h3><font color="black"><%= employee.first_name %></font></h3> 
			<h3><font color="black"><%= employee.middle_name %></font></h3> 
			<h3><font color="black"><%= employee.last_name %></font></h3>
			<h3><font color="Black"><%= employee.job_title %></font></h3>
			<h3><font color="Black"><%= employee.phone_number %></font></h3>

			<%= link_to "Delete", "/employees/#{employee.id}", method: :delete %>
			<%= link_to 'Edit', "/employees/#{employee.id}/edit" %>
		  </div> <!-- thumbnail -->
		</div> <!-- col-md-5 -->
	</div> <!-- row -->
	<% end %>
</div>
